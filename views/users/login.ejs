<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <section class="section">
      <div class="container">
        <p class="title">Log In</p>

        <form action="/users/login" method="post" class="box">
          <div class="field">
            <label class="label" for="username">Username</label>
            <div class="control">
              <input
                type="text"
                name="username"
                class="input"
                required
              />
            </div>
          </div>
          <div class="field">
            <label class="label" for="password">Password</label>
            <div class="control">
              <input
                type="password"
                name="password"
                class="input"
                required
              />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button type="submit" class="button is-info">
                Log In
              </button>
            </div>
          </div>
        </form>
      </div>
    </section>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
