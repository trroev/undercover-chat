<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <section class="section">
      <div class="container">
        <h1 class="title is-3">Edit Message</h1>
        <form action="/messages/<%= message._id %>" method="POST">
          <div class="field">
            <label class="label" for="title">Title:</label>
            <div class="control">
              <input
                class="input"
                type="text"
                id="title"
                name="title"
                value="<%= message.title %>"
              />
            </div>
          </div>
          <div class="field">
            <label class="label" for="text">Text:</label>
            <div class="control">
              <textarea class="textarea" id="text" name="text">
<%= message.text %></textarea
              >
            </div>
          </div>
          <input type="hidden" name="_method" value="POST" />
          <div class="field">
            <div class="control">
              <input
                class="button is-info"
                type="submit"
                value="Save Changes"
              />
            </div>
          </div>
        </form>
      </div>
    </section>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
