<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <header><%- include("../partials/nav.ejs") %></header>
    <h1>Message Board</h1>

    <% if (messages.length == 0) { %>
    <p>No messages found.</p>
    <% } else { %>
    <ul>
      <% messages.forEach(message => { %>
      <li>
        <a href="/messages/<%= message._id %>"
          ><%= message.title %></a
        >
        <% if (currentUser && currentUser.id == message.user) { %>
        <a href="/messages/<%= message._id %>/edit">Edit</a>
        <% } %>
      </li>
      <% }); %>
    </ul>
    <% } %> <% if (currentUser) { %>
    <a href="/messages/new" class="btn btn-primary">New Message</a>
    <% } %> <%- include("../partials/footer.ejs") %>
  </body>
</html>
