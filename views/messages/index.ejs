<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <div class="main message-board">
      <h1>Message Board</h1>

      <% if (messages.length == 0) { %>
      <p>No messages found.</p>
      <% } else { %>
      <ul>
        <% messages.forEach(message => { %>
        <li>
          <a href="/messages/<%= message._id %>"
            ><%= message.title %></a
          >
          <% if (currentUser && currentUser.id == message.user) { %>
          <a href="/messages/<%= message._id %>/edit">Edit</a>
          <% } %>
        </li>
        <% }); %>
      </ul>
      <% } %> <% if (currentUser) { %>
      <a href="/messages/new" class="btn">New Message</a>
      <% } %>
    </div>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
