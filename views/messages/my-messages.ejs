<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <header><%- include("../partials/nav.ejs") %></header>
    <main>
      <h1>My Messages</h1>
      <% if (messages.length === 0) { %>
      <p>You have not created any messages</p>
      <% } else { %>
      <ul>
        <% for (let message of messages) { %>
        <li>
          <a href="/messages/<%= message._id %>">
            <%= message.title %>
          </a>
        </li>
        <% } %>
      </ul>
      <% } %>
    </main>
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
